mixin fb-post(post)
  #fb-post.post-container
    .post
      .header
        img.profile-photo(src=post.picture)
        .meta
          h3#post-page.reveal-text(data-default='Untitled Page') #{post.from}
          p
            | 7hrs Â· 
            i.public
      .body
        p #{post.data.message}
        if post.data.status_type == 'added_photos'
          if post.data.full_picture
            .media
              img(src=post.data.full_picture)
        else
          if post.data.attachment
            .media
              .image(style='background-image: url("' + post.data.full_picture + '");')
              .deck
                h1 #{post.data.attachment.title}
                p #{post.data.attachment.description}
                h6 website.com
        
