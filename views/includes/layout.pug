doctype html5
html(lang='en')
  block vars
  head
    if path
      title Polideo &mdash; #{path}
    else
      title Polideo
    link(rel='stylesheet', href='/static/assets/styles/index.css')
    block styles
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
  body
    div.wrapper
      if test
        div.test-container
          include header.pug
          block content
      else
        include header.pug
        block content
    //- include footer.pug
    include analytics.pug

    script(src='https://code.jquery.com/jquery-3.3.1.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
    block scripts
