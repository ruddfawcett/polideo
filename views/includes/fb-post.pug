mixin fb-post(post)
  #fb-post.post-container
    .post
      .header
        .profile-photo
        .meta
          h3#post-page.reveal-text(data-default='Untitled Page') Untitled Page
          p#post-timestamp
            | 7hrs Â· 
            i.public
      .body
        p#post-body #{post.data.message}
        if post.data.attachment
          .media
            .image(style='background-image: url("' + post.data.full_picture + '");')
            .deck
              h1 #{post.data.attachment.title}
              p #{post.data.attachment.description}
              h6 website.com
        
